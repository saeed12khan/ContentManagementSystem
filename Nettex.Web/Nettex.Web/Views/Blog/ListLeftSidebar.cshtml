
@(Html.Nettex().Page()
        .Title("Blog | List Left Sidebar")
        .Footer()
        .Header(header => {
            header.ShowTopbar(false);
            header.Nav(DemoMenu.GetDemoMenu());
            header.StickyType(HeaderStickyType.Shrink);
        })
)



@Html.Nettex().Section().ContentTemplate(@<text>

    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="mb-9">
                    @Html.Nettex().Widget("SidebarSubscribeForm", new SubscriberModel())
                </div>

                <div class="mb-9">
                    @Html.Nettex().Widget("SidebarFollowLinks")
                </div>

                <div class="mb-9">
                    @Html.Nettex().Widget("SidebarCategories")
                </div>

                <div class="mb-9">
                    @Html.Nettex().Widget("SidebarPopularPosts")
                </div>

                <div class="mb-9">
                    @Html.Nettex().Widget("SidebarLatestPosts")
                </div>

                <div class="mb-9">
                    @Html.Nettex().Widget("SidebarLatestComments")
                </div>
            </div>

            <div class="col-lg-8">

                @Html.Nettex().BlogPosts(BlogPostViewName.ListBottomText).Pageable(7)

            </div>

        </div>
    </div>

</text>).Size(SectionSize.Small)


 
